class Solution {
    int maxSubarraySum(int arr[]) {
        int n=arr.length;
        int maxx=Integer.MIN_VALUE,sum=0;
        for(int i=0;i<n;i++){
            if(arr[i]>sum+arr[i]){
                sum=arr[i];
            }
            else{
                sum+=arr[i];
            }
            if(sum>maxx){
                maxx=sum;
            }
        }
        
        return maxx;
        
    }
 }
